{
    "automock": false,
    "globals": {
        "ts-jest": {
            "tsconfig": "./tsconfig.json"
        }
    },
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js"
    ],
    "notify": false,
    "rootDir": "./",
    "testRegex": "\\.test\\.(ts|tsx)$",
    "transform": {
        "\\.(ts|tsx)$": "ts-jest"
    },
    "verbose": true
}
