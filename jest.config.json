{
    "automock": false,
    "globals": {
        "window": {},
        "__TS_CONFIG__": "./tsconfig.json"
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js"
    ],
    "notify": false,
    "rootDir": "./",
    "testRegex": "\\.test\\.(ts|tsx)$",
    "transform": {
        "\\.(ts|tsx)$": "ts-jest/preprocessor.js"
    },
    "verbose": true
}
